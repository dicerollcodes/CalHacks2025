PORT=3000
MONGODB_URI=mongodb://localhost:27017/shatter-the-ice
NODE_ENV=development

# Claude API (for AI-powered roommate matching)
ANTHROPIC_API_KEY=your_claude_api_key_here

# JWT Authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Brevo Email Service (formerly Sendinblue)
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here

# Sender email (must be verified in Brevo)
# Verify at: https://app.brevo.com/settings/senders
BREVO_SENDER_EMAIL=noreply@yourdomain.com

# Development Mode - Bypass email verification (set to 'true' to skip sending emails)
# Use code '000000' when this is enabled
BYPASS_EMAIL_VERIFICATION=false

# Developer Mode - Enable instant login to any account (NEVER use in production!)
# Shows developer panel with user list for quick testing
DEVELOPER_MODE=false
